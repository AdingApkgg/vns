body:before {
    content: '';
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: url('/img/cute.webp');
    opacity: 0.3;
    z-index: -1;
}

.post .post-block .post-footer {
    position: relative;
    margin-top: 280px;
}

.main .post .post-block .post-footer:before {
    content: ' ';
    background: url('/img/skirt.webp') center / contain no-repeat;
    height: 368px;
    width: 100%;
    display: block;
    position: absolute;
    top: -295px;
    left: 0;
    pointer-events: none;
}

#fps {
    position: fixed;
    right: 0px;
    bottom: 0px;
    z-index: 1919810;
    background-color: rgba(255, 255, 255, 0.85);
    padding: 0 2px;
    border-top-left-radius: 4px;
}

@media (prefers-color-scheme: dark) {
    #fps {
        background-color: rgba(0, 0, 0, 0.72);
    }
}

.aplayer-list, .aplayer-list-index, .aplayer-list-title, .aplayer-list-author, .aplayer-title, .aplayer-info, .aplayer-music *, .aplayer-icon {
    background: var(--card-bg-color);
    color: var(--text-color) !important;
}

.aplayer-list ol li, .aplayer-music {
    text-align: initial !important;
}

@media (max-width: 960px) {
    #fps {
        z-index: 1;
    }

    .aplayer.aplayer-fixed.aplayer-narrow .aplayer-body {
        left: -66px !important;
    }

    .aplayer.aplayer-fixed.aplayer-narrow .aplayer-body:hover {
        left: 0 !important;
    }
}